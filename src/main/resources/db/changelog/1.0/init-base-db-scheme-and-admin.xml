<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="001-init-app-user-schema-and-admin" author="vlad.baklaiev">
        <createTable tableName="app_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
            </column>
            <column name="google_id" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="is_admin" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <customChange class="rockinbvv.stackoverflowlight.system.db.CreateAdminChange"/>
    </changeSet>
    <changeSet id="002-init-post" author="vlad.baklaiev">
        <createTable tableName="post">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="id_author" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamptz" defaultValueComputed="NOW()"/>
            <column name="upvote_count" type="bigint" defaultValueNumeric="0"/>
            <column name="downvote_count" type="bigint" defaultValueNumeric="0"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="post" baseColumnNames="id_author"
                referencedTableName="app_user" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_post_author"/>

        <createIndex tableName="post" indexName="idx_post_creation_date_desc">
            <column name="creation_date" descending="true"/>
        </createIndex>

        <createIndex tableName="post" indexName="idx_post_votes_desc">
            <column name="upvote_count" descending="true"/><!--TODO re-check how descending true/false works-->
            <column name="downvote_count" descending="false"/>
        </createIndex>

        <createIndex tableName="post" indexName="idx_post_id_author">
            <column name="id_author"/>
        </createIndex>

    </changeSet>
    <changeSet id="003-init-answer" author="vlad.baklaiev">
        <createTable tableName="answer">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="body" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="id_author" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="id_post" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="id_parent" type="bigint"/>
            <column name="creation_date" type="timestamptz" defaultValueComputed="NOW()"/>
            <column name="upvote_count" type="bigint" defaultValueNumeric="0"/>
            <column name="downvote_count" type="bigint" defaultValueNumeric="0"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="answer" baseColumnNames="id_author"
                referencedTableName="app_user" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_answer_author"/>

        <addForeignKeyConstraint
                baseTableName="answer" baseColumnNames="id_post"
                referencedTableName="post" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_answer_post"/>

        <addForeignKeyConstraint
                baseTableName="answer" baseColumnNames="id_parent"
                referencedTableName="answer" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_answer_parent"/>

        <createIndex tableName="answer" indexName="idx_answer_id_post">
            <column name="id_post"/>
        </createIndex>

        <createIndex tableName="answer" indexName="idx_answer_id_parent">
            <column name="id_parent"/>
        </createIndex>

        <createIndex tableName="answer" indexName="idx_answer_creation_date_desc">
            <column name="id_post"/>
            <column name="creation_date" descending="true"/>
        </createIndex>
    </changeSet>
    <changeSet id="004-init-vote" author="vlad.baklaiev">
        <!-- VOTE table -->
        <createTable tableName="vote">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_user" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="id_post" type="bigint"/>
            <column name="id_answer" type="bigint"/>
            <column name="upvote" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="NOW()"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="vote" baseColumnNames="id_user"
                referencedTableName="app_user" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_vote_user"/>

        <addForeignKeyConstraint
                baseTableName="vote" baseColumnNames="id_post"
                referencedTableName="post" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_vote_post"/>

        <addForeignKeyConstraint
                baseTableName="vote" baseColumnNames="id_answer"
                referencedTableName="answer" referencedColumnNames="id"
                onDelete="CASCADE"
                constraintName="fk_vote_answer"/>

        <addUniqueConstraint
                tableName="vote"
                columnNames="id_user, id_post, id_answer"
                constraintName="uc_vote_user_target"/>

        <createIndex tableName="vote" indexName="idx_vote_id_post">
            <column name="id_post"/>
        </createIndex>
        <createIndex tableName="vote" indexName="idx_vote_id_answer">
            <column name="id_answer"/>
        </createIndex>
        <sql>
            ALTER TABLE vote
                ADD CONSTRAINT chk_vote_target
                    CHECK (
                        (id_post IS NOT NULL AND id_answer IS NULL) OR
                        (id_post IS NULL AND id_answer IS NOT NULL)
                        );
        </sql>
        <!-- VOTE AGGREGATION LOG table -->
        <createTable tableName="vote_aggregation_log">
            <column name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="entity_type" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="id_entity" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz" defaultValueComputed="NOW()"/>
        </createTable>
        <addUniqueConstraint
                tableName="vote_aggregation_log"
                columnNames="entity_type,id_entity"
                constraintName="uc_vote_aggregation_log_unique"/>
    </changeSet>
</databaseChangeLog>
